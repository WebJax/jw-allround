{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "name": "Primary", "slug": "primary", "color": "#005b9a" },
        { "name": "Text", "slug": "text", "color": "#0d0d0d" },
        { "name": "Background", "slug": "background", "color": "hsla(0,0%,91%,.5)" },
        { "name": "Dark Background", "slug": "dark-background", "color": "#2f2f2f" },
        { "name": "Dark Text", "slug": "dark-text", "color": "#ececec" },
        { "name": "Gray Light", "slug": "gray-light", "color": "#d9d9d9" },
        { "name": "Gray Medium", "slug": "gray-medium", "color": "#a6a6a6" },
        { "name": "Gray Dark", "slug": "gray-dark", "color": "#595959" }
      ],
      "gradients": [
        { "name": "Primary to Darker", "slug": "primary-darker", "gradient": "linear-gradient(135deg, #005b9a, #003f6b)" },
        { "name": "Primary to Lighter", "slug": "primary-lighter", "gradient": "linear-gradient(135deg, #005b9a, #3393d1)" },
        { "name": "Dark to Medium Gray", "slug": "dark-medium-gray", "gradient": "linear-gradient(135deg, #2f2f2f, #595959)" }
      ],
      "duotone": [],
      "customDuotone": true,
      "defaultPalette": false,
      "defaultGradients": false,
      "link": true
    },
    "typography": {
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "14px" },
        { "name": "Normal", "slug": "normal", "size": "16px" },
        { "name": "Medium", "slug": "medium", "size": "20px" },
        { "name": "Large", "slug": "large", "size": "24px" },
        { "name": "XL", "slug": "xl", "size": "32px" },
        { "name": "XXL", "slug": "xxl", "size": "48px" }
      ],
      "fontFamilies": [
        { "name": "Hind Siliguri", "slug": "hind-siliguri", "fontFamily": "'Hind Siliguri', Arial, serif", "fontFace": [] }
      ],
      "lineHeight": true,
      "dropCap": true,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "letterSpacing": true,
      "textDecoration": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "padding": true,
      "margin": true,
      "blockGap": true,
      "spacingSizes": [
        {
          "name": "1",
          "slug": "10",
          "size": "10px"
        },
        {
          "name": "2",
          "slug": "20",
          "size": "20px"
        },
        {
          "name": "3",
          "slug": "30",
          "size": "30px"
        },
        {
          "name": "4",
          "slug": "40",
          "size": "40px"
        },
        {
          "name": "5",
          "slug": "50",
          "size": "50px"
        },
        {
          "name": "6",
          "slug": "60",
          "size": "60px"
        }
      ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "color": {
      "background": "hsla(0,0%,91%,.5)",
      "text": "var:preset|color|text"
    },
    "typography": {
      "fontFamily": "var:preset|font-family|hind-siliguri",
      "fontSize": "var:preset|font-size|normal",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "1.5rem",
      "padding": {
        "top": "0px",
        "right": "0px",
        "bottom": "0px",
        "left": "0px"
      },
      "margin": {
        "top": "0px",
        "right": "0px",
        "bottom": "0px",
        "left": "0px"
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var:preset|font-family|hind-siliguri",
          "fontSize": "var:preset|font-size|xxl",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "top": "1.5rem",
            "bottom": "1rem"
          }
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var:preset|font-family|hind-siliguri",
          "fontSize": "var:preset|font-size|xl",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "spacing": {
          "margin": {
            "top": "1.5rem",
            "bottom": "0.75rem"
          }
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var:preset|font-family|hind-siliguri",
          "fontSize": "var:preset|font-size|large",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var:preset|font-family|hind-siliguri",
          "fontSize": "var:preset|font-size|medium",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "link": {
        "color": {
          "text": "var:preset|color|primary"
        },
        ":hover": {
          "color": {
            "text": "#003f6b"
          }
        }
      },
      "button": {
        "color": {
          "background": "var:preset|color|primary",
          "text": "#ffffff"
        },
        "border": {
          "radius": "4px" 
        },
        ":hover": {
          "color": {
            "background": "#003f6b"
          }
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "typography": {
          "fontSize": "var:preset|font-size|large",
          "fontWeight": "600"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "var:preset|font-size|small",
          "fontWeight": "500"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var:preset|font-size|xl",
          "fontWeight": "600"
        },
        "spacing": {
          "margin": {
            "bottom": "0.5rem"
          }
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var:preset|font-size|small"
        },
        "color": {
          "text": "var:preset|color|gray-dark"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var:preset|font-size|small"
        }
      },
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "1rem",
            "bottom": "1rem"
          }
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "page-home",
      "title": "Forside",
      "postTypes": ["page"]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
